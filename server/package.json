{
  "name": "server",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build --compile --minify --sourcemap --outfile server src/index.ts",
    "start": "bun run src/index.ts",
    "check": "bunx ultracite fix --unsafe",
    "typecheck": "tsc --noEmit",
    "auth:generate": "bunx @better-auth/cli@latest generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.4",
    "@scalar/hono-api-reference": "^0.9.22",
    "@upstash/redis": "^1.35.6",
    "better-auth": "^1.3.33",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.3",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.6",
    "typescript": "^5",
    "ultracite": "5.6.1"
  }
}
